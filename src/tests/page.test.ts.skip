import { render, screen } from '@testing-library/svelte';
import { describe, it, expect, vi, beforeEach } from 'vitest';
import Page from '../routes/+page.svelte';

// Mock the API client
vi.mock('$lib/api/client', () => ({
	searchImages: vi.fn()
}));

describe('Dashboard Page', () => {
	beforeEach(() => {
		vi.clearAllMocks();
	});

	it('renders search bar, filters panel, and results grid', () => {
		render(Page);

		// Check for search input
		expect(screen.getByPlaceholderText('Search images...')).toBeInTheDocument();

		// Check for filters panel
		expect(screen.getByText('Filters')).toBeInTheDocument();

		// Check for empty state message
		expect(screen.getByText('No results found. Try a different search query.')).toBeInTheDocument();
	});

	it('displays filter options', () => {
		render(Page);

		// Check for category filter
		expect(screen.getByLabelText('Category')).toBeInTheDocument();

		// Check for sort by filter
		expect(screen.getByLabelText('Sort By')).toBeInTheDocument();
	});

	it('sets document title', () => {
		render(Page);

		// SvelteKit sets the title via svelte:head
		// In test environment, we can verify the component renders without errors
		expect(screen.getByPlaceholderText('Search images...')).toBeInTheDocument();
	});
});
